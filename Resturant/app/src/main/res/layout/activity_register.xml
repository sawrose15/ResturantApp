<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    android:weightSum="1">
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:scaleType="centerInside"
        android:background="@null"
        android:src="@drawable/user"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:background="#fff">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_register_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:focusable="true"
            android:maxLines="1"
            android:hint="Name:"/>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_register_email_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:focusable="true"
            android:maxLines="1"
            android:hint="Email:"/>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_register_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:focusable="true"
            android:maxLines="1"
            android:hint="Password"/>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_register_confirmPass_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:focusable="true"
            android:maxLines="1"
            android:hint="Confirm Password"/>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_register_address_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:focusable="true"
            android:maxLines="1"
            android:hint="Address:"/>
        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_register_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:focusable="true"
            android:maxLines="1"
            android:hint="Phone:"/>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">
        <Button
            android:id="@+id/activity_register_reg_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:text="Register"/>

        <Button
            android:id="@+id/activity_register_login_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@null"
            android:text="Already has a account?"/>
    </LinearLayout>



</LinearLayout>